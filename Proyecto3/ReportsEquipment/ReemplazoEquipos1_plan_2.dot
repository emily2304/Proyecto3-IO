digraph PlanOptimo {
    rankdir=LR;
    node [shape=circle, style=filled, fillcolor=lightblue, fontname=Arial];
    edge [color=darkgreen, arrowhead=vee, arrowsize=0.8];

    "0" [fillcolor=green, fontcolor=white];
    "3";
